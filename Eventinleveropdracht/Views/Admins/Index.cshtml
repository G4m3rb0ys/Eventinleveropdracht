@model IEnumerable<Eventinleveropdracht.Models.Admin>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background-color: #333333; /* Donkergrijze achtergrond voor de hele pagina */
        color: white; /* Witte tekst voor de hele pagina */
    }

    table {
        background-color: #444444; /* Donkergrijze achtergrond voor de tabel */
        color: white; /* Witte tekst in de tabel */
    }

        table th, table td {
            color: white; /* Zorg ervoor dat tekst in de tabel wit is */
        }

    a {
        color: #ffcc00; /* Geelachtige kleur voor links om goed zichtbaar te maken */
    }
</style>

<h1>Admin Control page</h1>
<h2>On this page we control the data that is in the admin database</h2>

<p>
    <a asp-action="Create">Create new Admin</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdminCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AdminCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
