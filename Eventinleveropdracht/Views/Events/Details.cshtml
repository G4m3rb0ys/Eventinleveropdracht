<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<!-- Zoekfunctie voor reserveringen -->
<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
    <h3>Reserveringen</h3>

    <!-- Zoekformulier -->
    <form asp-action="Details" method="get" style="display: flex;">
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Zoek op naam" class="form-control" />
        <button type="submit" class="btn btn-primary" style="margin-left: 5px;">Zoek</button>
    </form>
</div>

@if (Model.Reservations != null && Model.Reservations.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Naam</th>
                <th>Aantal</th>
                <th>Type</th>
                <th>Prijs</th>
                <th>Betaald</th>
                <th>Actie</th> <!-- Extra kolom voor de actieknop -->
            </tr>
        </thead>
        <tbody>
            @foreach (var reservatie in Model.Reservations)
            {
                <tr>
                    <td>@reservatie.Name</td>
                    <td>@reservatie.Amount</td>
                    <td>@reservatie.Type</td>
                    <td>€@reservatie.Price</td>
                    <td>@(reservatie.Paid ? "Ja" : "Nee")</td>
                    <td>
                        <form asp-action="TogglePaymentStatus" method="post">
                            <input type="hidden" name="id" value="@reservatie.Id" />
                            <button type="submit" class="btn btn-sm @(reservatie.Paid ? "btn-danger" : "btn-success")">
                                @(reservatie.Paid ? "Maak onbetaald" : "Markeer als betaald")
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Er zijn geen reserveringen voor dit evenement.</p>
}
