@model Eventinleveropdracht.Models.EventViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Event.Name" class="control-label"></label>
                <input asp-for="Event.Name" class="form-control" />
                <span asp-validation-for="Event.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Description" class="control-label"></label>
                <input asp-for="Event.Description" class="form-control" />
                <span asp-validation-for="Event.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.FromDate" class="control-label"></label>
                <input asp-for="Event.FromDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Event.FromDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.ToDate" class="control-label"></label>
                <input asp-for="Event.ToDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Event.ToDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Event.Location" class="control-label"></label>
                <input asp-for="Event.Location" class="form-control" />
                <span asp-validation-for="Event.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Type" class="control-label"></label>
                <input asp-for="Event.Type" class="form-control" />
                <span asp-validation-for="Event.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Requirements" class="control-label"></label>
                <input asp-for="Event.Requirements" class="form-control" />
                <span asp-validation-for="Event.Requirements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.MaxParticipants" class="control-label"></label>
                <input asp-for="Event.MaxParticipants" class="form-control" />
                <span asp-validation-for="Event.MaxParticipants" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.CurrentParticipants" class="control-label"></label>
                <input asp-for="Event.CurrentParticipants" class="form-control" />
                <span asp-validation-for="Event.CurrentParticipants" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Image" class="control-label"></label>
                <input asp-for="Event.Image" class="form-control" />
                <span asp-validation-for="Event.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.OrganiserId" class="control-label"></label>
                <select asp-for="Event.OrganiserId" class="form-control" asp-items="Model.Organisers"></select>
                <span asp-validation-for="Event.OrganiserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

